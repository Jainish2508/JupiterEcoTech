@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    char[] status_code = ViewBag.StatusCode.ToCharArray();
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="bg" class="breadcrumbs">
        <div class="overlay"></div>
        <div class="container mt-2">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Error</h2>
                <ol>
                    <li>@ViewBag.StatusCode</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <section id="error">
        <div class="error">
            <div class="container">
                <div class="col-xs-12 ground-color text-center">
                    <div class="pt-5">
                        <h3 class="h2">
                            Look like you're lost
                        </h3>
                    </div>
                    <div class="container-error-404">
                        <div class="clip"><div class="shadow"><span class="digit thirdDigit">@status_code[0]</span></div></div>
                        <div class="clip"><div class="shadow"><span class="digit secondDigit">@status_code[1]</span></div></div>
                        <div class="clip"><div class="shadow"><span class="digit firstDigit">@status_code[2]</span></div></div>
                    </div>
                    <h2 class="h1">@ViewBag.Message</h2>

                    <a class="btn dark_gray_bt" href="@Url.Action("index","home")">Return to Homepage</a>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
