
@model IEnumerable<JupiterEcoTech.Models.ProductDetails>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="bg" class="breadcrumbs">
        <div class="overlay"></div>
        <div class="container mt-2">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Product Detail</h2>
                <ol>
                    <li><a href="@Url.Action("index", "home")">Home</a></li>
                    <li>Details</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    </section><!-- End Breadcrumbs -->
    <!-- ======= products Details Section ======= -->
    <section id="products-details" class="products-details">
        <div class="container" data-aos="fade-up">
            @{
                <div class="products-details-container">

                    <div class="owl-carousel products-details-carousel">
                        @{
                            int i = 0;
                            foreach (var item in Model)
                            {

                                string alter = item.ProductFile.ToString().Replace(".jpg", "").Replace(".png", "");
                                <img src="~/Content/img/Products/@item.ProductFile" class="img-fluid  detail-image" alt="@alter">
                            }
                            i++;
                        }
                    </div>
                    @foreach (var item in Model)
                    {
                        string str = item.ProductDescription.ToString();
                        string[] splitString = str.Split(';');
                        string name = item.ProductName.Replace("Refurbished ", "").Replace("refurbished ", "");
                        <div class="products-info">
                            <h3>Product Information</h3>
                            <ul>
                                <li><strong>Product name</strong>: @name </li>
                                <li>
                                    <strong>Product Description</strong>: <br /><br />
                                    @foreach (var s in splitString)
                                    {
                                        @s
                                        <br />
                                    }
                                </li>
                            </ul>
                        </div>
                        break;
                    }

                </div>

                <div class="products-description">
                    @foreach (var item in Model)
                    {
                        <a href="@Url.Action("index", "enquiry")" class="btn btn-custom" id="@item.ProductName" onclick="check_product(this.id)">Shop Now</a>
                        break;
                    }

                </div>
            }

        </div>
    </section>
    <!-- End products Details Section -->
</main><!-- End #main -->
