@model JupiterEcoTech.Models.ContactViewModels
@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="bg" class="breadcrumbs">
        <div class="overlay"></div>
        <div class="container mt-2">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Contact</h2>
                <ol>
                    <li><a href="@Url.Action("index", "home")">Home</a></li>
                    <li>Contact</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <div class="map-section">
        <iframe style="border:0; width: 100%; height: 350px;" src="https://maps.google.com/maps?q=jupiter%20ecotech&t=&z=19&ie=UTF8&iwloc=&output=embed" frameborder="0" allowfullscreen></iframe>
    </div>

    <section class="enquiry">
        <div class="container">

            <div class="row justify-content-center" data-aos="fade-up">

                <div class="col-lg-10">

                    <div class="info-wrap">
                        <div class="row">
                            <div class="col-lg-4 info">
                                <i class="icofont-google-map"></i>
                                <h4>Location:</h4>
                                <p>
                                    02-Ashapuri Flat, <br />Sterling Cross Road,
                                    Behind Gwalia Sweet, Gurukul Road,<br>
                                    Memnagar, Ahmedabad, Gujarat-380052 <br><br>
                                </p>
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="icofont-envelope"></i>
                                <h4>Email:</h4>
                                <a href="mailto:info@jupiterecotech.in"><p>info@jupiterecotech.in</p></a>
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="icofont-phone"></i>
                                <h4>Call:</h4>
                                <a href="tel:+91 9974663464 "> <p>+91-997 466 3464</p></a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <br />
            <br />
            <h2 class="text-center" data-aos="fade-up">Contact Us</h2>
            <div class="row mt-5 justify-content-center" data-aos="fade-up">
                <div class="col-lg-10">
                    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "email-form", @id = "contact_form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-row">
                            <div class="col-md-4 form-group">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "What we will call you?", @id="name" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                            <div class="col-md-4 form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Mention your Email address.", @id="email" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                            <div class="col-md-4 form-group">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Mention your contact number.",@id="phone" })
                                @Html.ValidationMessageFor(m => m.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "How we can help you?",@id="subject" })
                            @Html.ValidationMessageFor(m => m.Subject)
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Query, new { @class = "form-control", @placeholder = "Write your query here...", @cols = 30, @rows = 10,@id= "message" })
                        </div>
                        <div class="form-group">
                            <div class="g-recaptcha" data-callback="recaptchaCallback" data-sitekey="6LfpHbIZAAAAAAIFEz60WJGoU2969Nqqcb05Ozbq"></div>
                        </div>
                        <div class="form-group">
                            <input id="submitbtn" type="submit" class="btn btn-primary" value="Send Message" disabled />
                            <input type="reset" class="btn btn-default" value="Reset" />
                        </div>
                        <div id="msgSubmit" class="h3 center hidden"></div>
                        <div class="clearfix"></div>
                        <div id="process-loader"></div>
                    }
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->
<script src='https://www.google.com/recaptcha/api.js'></script>